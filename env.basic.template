# Basic Development Environment (No Lightning)
# Copy this file to .env.local for basic music-only development
#
# Usage: cp env.basic.template .env.local

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_BAND_NAME=lnaddress music

# Environment
NODE_ENV=development

# Lightning Network Features (disabled)
NEXT_PUBLIC_ENABLE_LIGHTNING=false

# CDN URLs (optional for local development)
# NEXT_PUBLIC_CDN_URL=

# Optional: Custom Domain for Images
# NEXT_PUBLIC_IMAGE_DOMAIN=localhost:3000

# Database Configuration (optional for local development)
# POSTGRES_URL=postgresql://username:password@host:port/database
# POSTGRES_HOST=localhost
# POSTGRES_DATABASE=rss_music_site
# POSTGRES_USERNAME=postgres
# POSTGRES_PASSWORD=password

# Podcast Index API Configuration (optional)
# PODCAST_INDEX_API_KEY=your-api-key
# PODCAST_INDEX_API_SECRET=your-api-secret
