# ============================================
# SITE CONFIGURATION
# ============================================
NEXT_PUBLIC_BAND_NAME="Your Band Name"
NEXT_PUBLIC_BAND_SLUG="your-band-slug"
NEXT_PUBLIC_SITE_TITLE="Your Band Name - Lightning Music Platform"
NEXT_PUBLIC_SITE_URL="https://yourdomain.com"

# ============================================
# LIGHTNING CONFIGURATION
# ============================================
# Lightning address (should match what's in your RSS feed value tags)
NEXT_PUBLIC_METADATA_FEE_ADDRESS="your-lightning-address@getalby.com"
NEXT_PUBLIC_METADATA_FEE_SATS=2

# Boost Features
NEXT_PUBLIC_ENABLE_AUTO_BOOST=true
NEXT_PUBLIC_AUTO_BOOST_AMOUNT=25
NEXT_PUBLIC_DEFAULT_BOOST_AMOUNT=100

# ============================================
# OPTIONAL: KEYSEND BRIDGE
# ============================================
# For non-keysend wallets like Coinos - get from Alby Hub
# ALBY_HUB_BRIDGE_NWC=nostr+walletconnect://YOUR_PUBKEY?relay=wss://relay.getalby.com/v1&secret=YOUR_SECRET

# ============================================
# OPTIONAL: ADMIN FEATURES
# ============================================
# ADMIN_PASSWORD=your_secure_admin_password_here

# ============================================
# OPTIONAL: DATABASE (for boost history)
# ============================================
# POSTGRES_URL=your_vercel_postgres_url_here

# ============================================
# OPTIONAL: CDN CONFIGURATION
# ============================================
# Bunny.net CDN
# BUNNY_CDN_API_KEY=your_bunny_api_key_here
# BUNNY_STORAGE_API_KEY=your_storage_api_key_here
# BUNNY_STORAGE_ZONE=your_storage_zone_name
# BUNNY_STORAGE_REGION=NY
# BUNNY_CDN_HOSTNAME=your-cdn.b-cdn.net
# NEXT_PUBLIC_CDN_URL=https://your-cdn.b-cdn.net

# ============================================
# OPTIONAL: PODCAST INDEX API
# ============================================
# PODCAST_INDEX_API_KEY=your_key_here
# PODCAST_INDEX_API_SECRET=your_secret_here